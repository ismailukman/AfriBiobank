# AfriBiobank Environment Configuration Template
# Copy this file to .env and update with your values

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=AfriBiobank
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL
DATABASE_URL=postgresql://afribiobank:afribiobank_password@localhost:5432/afribiobank
POSTGRES_USER=afribiobank
POSTGRES_PASSWORD=afribiobank_password
POSTGRES_DB=afribiobank

# MongoDB
MONGODB_URL=mongodb://localhost:27017/afribiobank
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin_password

# Redis
REDIS_URL=redis://localhost:6379

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=30d
BCRYPT_ROUNDS=12

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =============================================================================
# STORAGE
# =============================================================================
# MinIO / S3
MINIO_URL=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=afribiobank
MINIO_USE_SSL=false

# AWS S3 (alternative)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# =============================================================================
# ML/AI
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_ROOT=s3://mlflow
MLFLOW_BACKEND_STORE_URI=postgresql://afribiobank:afribiobank_password@localhost:5432/mlflow

# =============================================================================
# FEDERATED LEARNING
# =============================================================================
FL_SERVER_ADDRESS=localhost:8080
FL_MIN_CLIENTS=3
FL_ROUNDS=10
FL_PRIVACY_BUDGET=10.0

# =============================================================================
# RDF / SEMANTIC WEB
# =============================================================================
FUSEKI_URL=http://localhost:3030
FUSEKI_DATASET=afribiobank
FUSEKI_ADMIN_PASSWORD=admin_password

# =============================================================================
# API GATEWAY (Kong)
# =============================================================================
KONG_PG_HOST=postgres
KONG_PG_PORT=5432
KONG_PG_USER=afribiobank
KONG_PG_PASSWORD=afribiobank_password
KONG_PG_DATABASE=kong

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
GRAFANA_ADMIN_PASSWORD=admin

# Sentry (Error Tracking)
SENTRY_DSN=

# =============================================================================
# EMAIL
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@afribiobank.org

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# OpenAI (for Agentic API)
OPENAI_API_KEY=

# Anthropic Claude
ANTHROPIC_API_KEY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_FEDERATED_LEARNING=true
ENABLE_BLOCKCHAIN=false
ENABLE_AGENTIC_API=true
ENABLE_ANALYTICS=true

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=false
LOG_LEVEL=info
ENABLE_SWAGGER=true
CORS_ORIGIN=http://localhost:3000
